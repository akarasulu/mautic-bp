{
    "name": "${environmentName}",
    "description": "Mautic Blueprint",
    "version": "1.0.0",
    "ssh-key": "mautic",
    "author": "https://github.com/akarasulu",
    "containers": [
        {
            "hostname": "${hostname}",
            "template": "debian-stretch",
            "peer-criteria": "CRITERIA",
            "size": "${containerSize}"
        }
    ],
    "peer-criteria": [
        {
            "name": "CRITERIA"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/akarasulu/mautic-bp/archive/master.zip",
        "ansible-playbook": "main.yml",
        "extra-vars": [
            {
                "key": "hostname",
                "value": "${hostname}"
            },
            {
                "key": "email",
                "value": "${email}"
            },
            {
                "key": "password",
                "value": "${password}"
            }
        ],
        "groups": [
            {
                "name": "mautic",
                "hostnames": [
                    "${hostname}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Environment's name",
            "type": "string",
            "default": "mautic",
            "validation": "[a-zA-Z0-9_]+"
        },
        "hostname": {
            "description": "Hostname of the mautic container",
            "type": "string",
            "default": "mautic",
            "validation": "[a-zA-Z0-9_]+"
        },
        "email": {
            "description": "Admin user identity/email",
            "type": "string"
        },
        "password": {
            "description": "Admin user password",
            "type": "string",
            "default": "secret"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        }
    }
}
